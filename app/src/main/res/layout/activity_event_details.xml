<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EventDetailsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/mainGreen">

            <Button
                android:id="@+id/btnHome3"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Home"/>
            <EditText
                android:id="@+id/edtSearch2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:hint="Añada su busqueda..."
                android:textColor="#FFFFFF"
                android:maxLines="1"
                android:inputType="text"
                />
            <Button
                android:id="@+id/btnSearch2"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:text="Q"
                android:textSize="20dp"
                android:background="@color/mainGreen"
                android:textColor="#FFFFFF"/>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Detalles de evento"
            android:textSize="30dp"
            android:background="@color/mainGreen"
            android:textAlignment="center"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/mainGreen">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Titulo"
                android:textSize="27dp"
                android:background="@color/mainGreen"
                android:layout_marginHorizontal="25sp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/tvDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25sp"
            android:text="Fecha"
            android:textSize="24dp"
            />

        <TextView
            android:id="@+id/tvHour"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25sp"
            android:text="Hora"
            android:textSize="24dp"
            />

        <TextView
            android:id="@+id/tvPlace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="25sp"
            android:text="Lugar"
            android:textSize="24dp"
            />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="25sp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alarma"/>

            </LinearLayout>

            <Button
                android:id="@+id/btnAlarmOn"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/mainGreen"
                android:textColor="#FFFFFF"
                android:text="Si"
                android:layout_gravity="center_vertical"/>

            <Button
                android:id="@+id/btnAlarmOff"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@color/mainGreen"
                android:textColor="#FFFFFF"
                android:text="No"
                android:layout_gravity="center_vertical"/>

        </LinearLayout>



        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Descripción"
            android:textSize="30dp"
            android:layout_marginHorizontal="25sp"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:layout_marginHorizontal="25sp"/>

        <Button
            android:id="@+id/btnEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Editar evento"
            android:layout_weight="1"
            android:background="@color/mainRed"
            android:textColor="#FFFFFF"
            android:layout_marginHorizontal="13sp"
            android:layout_marginVertical="5sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="5sp">
            <Button
                android:id="@+id/btnList"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lista de eventos"
                android:layout_weight="1"
                android:background="@color/mainRed"
                android:textColor="#FFFFFF"
                android:layout_marginHorizontal="12sp"
                />
            <Button
                android:id="@+id/btnAddEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:background="@color/mainGreen"
                android:textColor="#FFFFFF"
                android:textSize="45dp"
                android:textAlignment="center"
                android:layout_margin="5sp"
                android:layout_marginHorizontal="12sp"
                />
        </LinearLayout>


    </LinearLayout>

</ScrollView>